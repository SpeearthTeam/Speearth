<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="background" fx:id="login_pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="360.0" fitWidth="454.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/icona_logo_speearth.png" />
               </image>
            </ImageView>
            <Label text="Effettuare il login per poter utilizzare il Sistema">
               <padding>
                  <Insets bottom="20.0" top="50.0" />
               </padding>
            </Label>
            <TextField fx:id="input_username" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="320.0" promptText="Username">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="input_password" alignment="CENTER" maxWidth="-Infinity" prefWidth="320.0" promptText="Password">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="bottone_entra" mnemonicParsing="false" onAction="#autentica" prefHeight="51.0" prefWidth="320.0" text="Entra">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
